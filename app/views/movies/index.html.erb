<p id="notice"><%= notice %></p>
<div class="text-center">

<h1>Movies</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr class="movie">
        <td class="title"><%= movie.title %></td>
        <td class="action"><%= link_to 'Show', movie %></td>
        <td class="action"><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td class="action"><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= simple_form_for :file, url: movie_importer_path, defaults: { input_html: { class: 'file importer' } } do |f| %>
  <p>Attach Document (Max 1MB)</p>
  <%= f.input :file, as: :file, label: false %>
  <%= f.button :submit, 'Import Movies'%>
<% end %>

<%= link_to 'New Movie', new_movie_path %>
